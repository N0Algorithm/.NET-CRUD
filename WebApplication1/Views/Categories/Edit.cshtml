
@model Category
@section title {
	@if(Model != null) 
	{
		<h3 >Category :@Model.Name</h3>
	}
	else{
		<h1> Cetegory does not exist </h1>
	}
	
}
<form method="post" asp-controller="categories" asp-action="edit">
	<input type="hidden" asp-for="CategoryId" />
	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Name" class="col-form-label" ></label>
		</div>
		<div class="col-6">
			<input type="text" asp-for="Name" class="form-control" required/>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Description" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="text" asp-for="Description" class="form-control" />
		</div>
	</div>
	<input type="submit" class="btn btn-primary" value="Save"/>

</form>


<a href="/categories">Back</a>
	
	
